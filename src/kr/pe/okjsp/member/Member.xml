<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd">
<sqlMap namespace="Member">
  <typeAlias alias="member" type="kr.pe.okjsp.member.Member" />

  <insert id="insert" parameterClass="member">
    INSERT INTO okmember (id)
      VALUES (#id#)
  </insert>

  <select id="login" parameterClass="member" resultClass="member">
    SELECT id
      FROM okmember
      WHERE id = #id#
  </select>
  
  <select id="getById" resultClass="member" parameterClass="string">
    SELECT *
      FROM okmember
      WHERE id = #id#
  </select>
  
  <select id="list" resultClass="member">
    SELECT *
      FROM okmember
  </select>

  <update id="update" parameterClass="member">
    UPDATE okmember SET
      id = #id#
  </update>
  
  <delete id="delete" parameterClass="string">
    DELETE
      FROM okmember
      WHERE id = #id#
  </delete>
</sqlMap>